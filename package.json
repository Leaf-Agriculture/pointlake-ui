{
  "name": "leaf-dashboard",
  "version": "1.0.0",
  "description": "Dashboard com mapas para API da Leaf",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
