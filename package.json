    "agriculture",
    "dashboard"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
